<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainColor"
    tools:context=".ui.dashboard.DashboardFragment">

    <TextView
        android:id="@+id/text_timer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/timeColor"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:text="00:00:00"
        android:textAlignment="center"
        android:textColor="@color/subColor"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@id/text_delay"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/text_delay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/delayColor"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:text="-0s"
        android:textAlignment="center"
        android:textColor="@color/subColor"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintStart_toEndOf="@id/text_timer"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <LinearLayout
        android:id="@+id/ll_memo1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/movieColor3"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_timer"
        app:layout_constraintVertical_weight="3">

        <ImageView
            android:id="@+id/iv_circle"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:background="@drawable/circle" />

    </LinearLayout>


    <TextView
        android:id="@+id/memo1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/test_square"
        android:gravity="center"
        android:padding="12dp"
        android:text="テスト頻出"
        android:textColor="@color/subColor"
        app:layout_constraintBottom_toTopOf="@+id/memo2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/memo2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/test_square"
        android:gravity="center"
        android:padding="12dp"
        android:text="理解不足"
        android:textColor="@color/subColor"
        app:layout_constraintBottom_toTopOf="@+id/memo3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/memo3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/test_square"
        android:gravity="center"
        android:padding="12dp"
        android:text="問題解説開始"
        android:textColor="@color/subColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>