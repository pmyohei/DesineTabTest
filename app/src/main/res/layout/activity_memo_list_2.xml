<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/subColor"
    tools:context=".ui.MemoListActivity">

    <LinearLayout
        android:id="@+id/ll_memo1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/test_square"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@color/purple_200" />

        <TextView
            android:id="@+id/memo1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="12dp"
            android:text="テスト頻出" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_memo2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/test_square"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_memo1">

        <View
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@color/teal_200" />

        <TextView
            android:id="@+id/memo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="12dp"
            android:text="理解不足" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_memo3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/test_square"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_memo2">

        <View
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@color/teal_700" />

        <TextView
            android:id="@+id/memo3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="12dp"
            android:text="問題解説開始" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>